CURRENT_PATDIR="/home/opt/gitwork/"
PATDIR_BASE='/home/opt/chksecurity'
PAT_DIR="${PATDIR_BASE}/patterns"
PAT_ERROR="${PATDIR_BASE}/errors"
PAT_DUPS="${PATDIR_BASE}/duplicates"
PAT_LOGS="${PATDIR_BASE}/logs"
LOG="${PAT_LOGS}/distribute.log"
CACHE_FILE="${PATDIR_BASE}/_current_pattern_list.txt"


BASE_CURRENT='/home/opt/gitwork'
PAT_DIR='/home/opt/chksecurity/patterns'
BASE_DIR="$PAT_DIR"
FORMAT="%s: "

title() {
	echo "##################################" | tee $LOG
	echo "# Distribute Patterns v${SVER}" | tee -a $LOG
	echo "##################################" | tee -a $LOG
	echo | tee -a $LOG
}

log() {
	echo "$@" >> $LOG
}

msg() {
	echo "$@" | tee -a $LOG
}

msgn() {
	printf "$FORMAT" $1 | tee -a $LOG
}


SLE10="sle10sp4 sle10sp3 sle10sp2 sle10sp1 sle10sp0"
SLE11="sle11sp4 sle11sp3 sle11sp2 sle11sp1 sle11sp0"
SLE12="sle12sp5 sle12sp4 sle12sp3 sle12sp2 sle12sp1 sle12sp0"
SLE15="sle15sp5 sle15sp4 sle15sp3 sle15sp2 sle15sp1 sle15sp0"
TOTAL=0
clear
title
BASE_OPT="$1"
if [[ -n $BASE_OPT ]]; then
	BASE_DIR=$BASE_OPT
fi
if [[ -d $BASE_DIR ]]; then
	cd $BASE_DIR
else
	msg "Error: Directory not found - $BASE_DIR"
	msg "Run chksecurity"
	echo
	exit 1
fi
for i in $SLE15 $SLE12 $SLE11 $SLE10
do
	COUNT=0
	msgn $i
	NUM=$(echo $i | sed -e "s/sle//g;s/sp/\./g")
	SLE_DIR=$(echo $i | sed -e "s/sp[[:digit:]]//g")
	PAT_DIR="${CURRENT_PATDIR}/sca-patterns-${SLE_DIR}/patterns/SLE/${i}"
	for FILTER in "_${NUM}.py" "_${NUM}.ltss.py"
	do
		BASECNT=$(ls -1 *${FILTER} 2>/dev/null | wc -l)
		COUNT=$(( COUNT + BASECNT ))
		if (( BASECNT > 0 )); then
			if [[ -d $PAT_DIR ]]; then
				mv *${FILTER} ${PAT_DIR}/
			else
				msg "ERROR: Directory not found: $PAT_DIR"
			fi
		fi
	done
	msg $COUNT
	TOTAL=$(( TOTAL + COUNT ))
done
echo
msg "Total: $TOTAL"
echo

